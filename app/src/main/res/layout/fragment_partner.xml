<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/airRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ico_launch_flights" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="항공권"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_sky" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/carRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ico_launch_cars" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="렌터카"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_sky" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/pensionRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ico_launch_pensions" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="펜션"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_woori" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/packageRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ico_launch_buses" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView4"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="패키지여행"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_modu" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/ticketRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ico_launch_tickets" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView5"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="티켓"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_orbitz" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:id="@+id/guideRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button_white"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/partner_circle"
                        android:layout_height="@dimen/partner_circle"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_button"
                        android:paddingLeft="25dp"
                        app:srcCompat="@drawable/ico_launch_guides" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView6"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="가이드"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/logo_real" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
